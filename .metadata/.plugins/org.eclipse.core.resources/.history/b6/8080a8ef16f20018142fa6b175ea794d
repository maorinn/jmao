package com;

public class a {
public static void main(String[] args) {
	String s = "113@ ere qqq yyui";
	String s1= s.replaceAll("@", "");
	String[] ss = s1.split(" ");
	String[] n;
	int i;
	for(i =0;i<ss.length;i++){
		System.out.println(ss[i]);
	}
	String c = "To be or not to be";
	String[] c1 = c.split(" ");
	StringBuffer[] a = new StringBuffer[15];
	for(i = 0;i<6;i++){
		StringBuffer a1 = new StringBuffer(c1[i]).reverse().append(" ");
		a[i] = a1;
		System.out.print(a[i]);
	}
	
}
}
